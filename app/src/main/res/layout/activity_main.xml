<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"/>

    <Button android:layout_width="match_parent" android:layout_height="40dp"
            android:id="@+id/go_tarditionlifemanage"
            android:text="传统生命周期管理"/>

    <Button android:layout_width="match_parent" android:layout_height="40dp"
            android:id="@+id/go_uselifecycle"
            android:text="使用lifecycle管理生命周期"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user"/>

    <Button android:layout_width="match_parent" android:layout_height="40dp"
            android:id="@+id/change_user"
            android:text="改变User"/>
</LinearLayout>